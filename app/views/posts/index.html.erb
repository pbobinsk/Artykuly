<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th><%= Post.model_name.human %> <%= Post.human_attribute_name(:title) %></th>
      <th><%= t :hello%> <%= Post.human_attribute_name(:body) %> <%= t '.show' %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body.html_safe %></td>
        <td><%= link_to (t '.show'), post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t '.new'), new_post_path %>
